<h1 class="my-5 text-center">Bienvenidos a Hogwarts</h1>
<h3 class= "my-5 text-center">Lista de personajes</h3>


<section class= "m-5 text-center">
<div class="row">
  <div class="col-sm-12 mb-3 mb-sm-0">
    <div class="card">
      <div class="card-body">
        <% @characters.each do |a|%>
        <p class= "text-center"><%= a.name %> - <%= a.location %> - <%= a.house %></p>
        <% end %>
      </div>
    </div>
  </div>
  </div>


